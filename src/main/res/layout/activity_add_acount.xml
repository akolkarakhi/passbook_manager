<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_acount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.akhilesh.passbook.AddAcount"
    android:weightSum="1">

    <EditText
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:id="@+id/AccName"
        android:hint="Account Number"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add Account"
        android:id="@+id/AddBt"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/Rem"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:id="@+id/CustName"
        android:gravity="center"
        android:hint="Customer Number"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/AccName"
        android:layout_alignStart="@+id/AccName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/AccHold"
        android:gravity="center"
        android:background="#ffffff"

        android:hint="Account Holder"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/CustName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:gravity="center"
        android:background="#ffffff"
        android:id="@+id/BankName"
        android:hint="Bank Name"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/AccHold"
        android:layout_alignStart="@+id/AccHold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#ffffff"
        android:gravity="center"
        android:id="@+id/BraName"
        android:hint="Branch Nmae"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/BankName"
        android:layout_alignStart="@+id/BankName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/BraAdd"
        android:hint="Branch Address"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/BraName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/Ifsc"
        android:hint="IFSC"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/BraAdd"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/Micr"
        android:hint="MICR"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/Ifsc"
        android:layout_alignStart="@+id/Ifsc" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/CurrBal"
        android:gravity="center"
        android:hint="Current Balance"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/Micr"
        android:layout_alignStart="@+id/Micr" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/Rem"
        android:hint="Remark"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/CurrBal"
        android:layout_alignStart="@+id/CurrBal" />
</RelativeLayout>
